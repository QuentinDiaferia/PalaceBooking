{# src/PB/UserBundle/Resources/views/Security/login.html.twig #}

{% extends "PBBookingBundle::layout.html.twig" %}

{% block body %}

    <h2>Connexion</h2>

    {% if error %}
        <div class="alert alert-danger">{{ error.message }}</div>
    {% endif %}

    <form action="{{ path('login_check') }}" method="post" class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-sm-2" for="username">Login :</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="username" name="_username" placeholder="Login">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="password">Mot de passe :</label>
            <div class="col-sm-10"> 
                <input type="password" class="form-control" id="password" name="_password" placeholder="Mot de passe">
            </div>
        </div>
        <div class="form-group"> 
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Connexion</button>
            </div>
        </div>
    </form>

{% endblock %}